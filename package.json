        "stylelint-config-recommended": "^14.0.0",
        "stylelint-css-modules": "^1.2.2",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5",
        "webpack": "^5.91.0",
        "webpack-bundle-analyzer": "^4.10.2",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.0.4"
    }
